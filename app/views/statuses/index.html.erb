<p id="notice"><%= notice %></p>

<% content_for :title, translate_model(Status) %>

<div class="dataTables_wrapper dt-bootstrap4">  
  <div calss="row">
    <div calss="col-sm-12">      
      <table id="status_table" class="table table-bordered table-striped dtr-inline" role="grid">
        <thead>
          <tr role="row">
            <th width="3%">#</th>
            <th class="sorting"> <%= translate_attribute(Status, :description) %> </th>        
            <th class="sorting text-center" width="11%"> <%= translate_attribute(Status, :created_at) %> </th>
            <th class="text-center" width="10%"> <%= t('others.actions') %> </th>
          </tr>
        </thead>

        <tbody>
          <% @statuses.each do |status| %>
            <tr>
              <td><%= status.id %></td>
              <td><%= status.description %></td>      
              <td><%= l(status.created_at) %></td>

              <td>
                <div class="text-center">
                  <%= link_to status, class: "btn btn-outline-secondary btn-sm" do %>                    
                      <span class="fa fa-search" />                      
                  <% end %>

                  <%= link_to edit_status_path(status), class: "btn btn-outline-secondary btn-sm" do %>                    
                      <span class="fa fa-pen" />
                  <% end %>

                  <%= link_to status, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-secondary btn-sm" do %>
                      <span class="fa fa-trash" />                         
                  <% end %>
                </div>
              </td>
              
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div>
  <%= link_to t('buttons.new') + ' ' + translate_model(Status), new_status_path, class: "btn btn-primary"  %>
</div>
              