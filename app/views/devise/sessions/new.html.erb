<!DOCTYPE html>
<html>
  <head>
    
    <%= render "base/head_tags" %>

  </head>

  <body class="hold-transition login-page">
    <div class="login-box">

      <div class="login-logo">
        <a href="#"><b>Bird Bug </b>Tracker</a>
      </div>
      <div class="card">
        <div class="card-body login-card-body">
          <p class="login-box-msg"> <%=translate_message(User, :sign_start_session) %> </p>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>      

            <div class="input-group mb-3">              
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: translate_attribute(User, :email) %>
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-envelope"></span>
                </div>
              </div>
            </div>

            <div class="input-group mb-3">              
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: translate_attribute(User, :password) %>
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-lock"></span>
                </div>
              </div>
            </div>

            <%= render "base/flash_notices" %>
            
            <div class="row">          
              <% if devise_mapping.rememberable? %>
                <div class="col-8">
                  <div class="input-group mb-3">
                    <div class="icheck-primary">
                      <%= f.check_box :remember_me %>
                      <%= f.label translate_attribute(User, :remember_me) %>
                    </div>
                  </div>
                </div>
              <% end %>

              <div class="col-4">
                <%= f.submit translate_message(User, :log_in), class: "btn btn-primary btn-block" %>
              </div>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>

        </div>
      </div>
    </div>
  </body>
</html>