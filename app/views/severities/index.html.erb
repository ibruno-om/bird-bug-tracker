<p id="notice"><%= notice %></p>

<% content_for :title, t('severities.model_name') %>

<div class="dataTables_wrapper dt-bootstrap4">  
  <div calss="row">
    <div calss="col-sm-12">      
      <table id="severity_table" class="table table-bordered table-striped dtr-inline" role="grid">
        <thead>
          <tr role="row">
            <th width="3%">#</th>
            <th class="sorting"> <%= t('severities.description') %> </th>        
            <th class="sorting text-center" width="11%"> <%= t('severities.created_at') %> </th>
            <th class="text-center" width="10%"> <%= t('others.actions') %> </th>
          </tr>
        </thead>

        <tbody>
          <% @severities.each do |severity| %>
            <tr>
              <td><%= severity.id %></td>
              <td><%= severity.description %></td>      
              <td><%= l(severity.created_at) %></td>

              <td>
                <div class="text-center">
                  <%= link_to severity, class: "btn btn-outline-secondary btn-sm" do %>                    
                      <span class="fa fa-search" />                      
                  <% end %>

                  <%= link_to edit_severity_path(severity), class: "btn btn-outline-secondary btn-sm" do %>                    
                      <span class="fa fa-pen" />
                  <% end %>

                  <%= link_to severity, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-secondary btn-sm" do %>
                      <span class="fa fa-trash" />                         
                  <% end %>
                </div>
              </td>
              
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div>
  <%= link_to t('buttons.new') + ' ' + t('severities.model_name'), new_severity_path, class: "btn btn-primary"  %>
</div>
              