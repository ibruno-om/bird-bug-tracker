<div class="card card-primary">
  <%= form_with(model: issue) do |form| %>
    <div class="card-body">    
      <% if issue.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(issue.errors.count, "error") %> prohibited this issue from being saved:</h2>

          <ul>
            <% issue.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <div class="form-group col-md-4">
          <%= form.label translate_attribute(Issue, :category) %>
          <%= form.collection_select :category_id, Category.order(:id), :id, :description, {}, class: "form-control"  %>
        </div>

        <div class="form-group col-md-4">
          <%= form.label translate_attribute(Issue, :status) %>
          <%= form.collection_select :status_id, Status.order(:id), :id, :description, {}, class: "form-control"  %>
        </div>

        <div class="form-group col-md-4">
          <%= form.label translate_attribute(Issue, :visibility) %>          
          <%= form.select :visibility, enum_options_for_select(Issue, :visibility), {}, class: "form-control" %>
        </div>

      </div>  

      <div class="row">
        <div class="form-group col-md-4">
          <%= form.label translate_attribute(Issue, :reproducibility) %>
          <%= form.collection_select :reproducibility_id, Reproducibility.order(:id), :id, :description, {}, class: "form-control"  %>
        </div>

        <div class="form-group col-md-4">
          <%= form.label translate_attribute(Issue, :severity) %>
          <%= form.collection_select :severity_id, Severity.order(:id), :id, :description, {}, class: "form-control"  %>
        </div>

        <div class="form-group col-md-4">
          <%= form.label translate_attribute(Issue, :priority) %>
          <%= form.collection_select :priority_id, Priority.order(:id), :id, :description, {}, class: "form-control"  %>
        </div>
      </div>

      <div class="row">
        <div class="form-group col-md-4">
          <%= form.label translate_attribute(Issue, :creator_user) %>
          <%= form.collection_select :creator_user_id, User.order(:name), :id, :name, {}, class: "form-control" %>
        </div>

        <div class="form-group col-md-4">
          <%= form.label translate_attribute(Issue, :assigned_user) %>
          <%= form.collection_select :assigned_user_id, User.order(:name), :id, :name, {include_blank: true}, class: "form-control" %>
        </div>

        <div class="form-group col-md-4">
          <%= form.label translate_attribute(Issue, :product_version) %>
          <%= form.text_field :product_version, class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="form-group col-md-12">
          <%= form.label translate_attribute(Issue, :title) %>
          <%= form.text_field :title, class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="form-group col-md-12">
          <%= form.label translate_attribute(Issue, :description) %>
          <%= form.text_area :description, class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="form-group col-md-12">
          <%= form.label translate_attribute(Issue, :additional_information) %>
          <%= form.text_area :additional_information, class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group">
        <%= form.submit t('buttons.save') , class: "btn btn-primary" %>
      </div>

    </div>
  <% end %>
</div>