<p id="notice"><%= notice %></p>

<table class="table">
  <tr>
    <td>
      <b><%= translate_attribute(Issue, :category) %>:</b>
      <%= @issue.category.description %>
    </td>
    <td>
      <b><%= translate_attribute(Issue, :status) %>:</b>
      <%= @issue.status.description %>
    </td>
    <td>
      <b><%= translate_attribute(Issue, :visibility) %>:</b>
      <%= enum_l(@issue, :visibility) %>
    </td>
    <td>
      <b><%= translate_attribute(Issue, :reproducibility) %>:</b>
      <%= @issue.reproducibility.description %>
    </td>
    <td>
      <b><%= translate_attribute(Issue, :severity) %>:</b>
      <%= @issue.severity.description %>
    </td>
  </tr>
  <tr>
    <td>
      <b><%= translate_attribute(Issue, :priority) %>:</b>
      <%= @issue.priority.description %>
    </td>
    <td>
      <b><%= translate_attribute(Issue, :creator_user) %>:</b>
      <%= @issue.creator_user.name %>
    </td>
    <td>
      <b><%= translate_attribute(Issue, :assigned_user) %>:</b>
      <%= @issue.assigned_user.name if @issue.assigned_user %>
    </td>
    <td>
      <b><%= translate_attribute(Issue, :product_version) %>:</b>
      <%= @issue.product_version %>
    </td>
    <td>
      <b><%= translate_attribute(Issue, :submited_date) %>:</b>
      <%= l(@issue.submited_date) %>
    </td>
  </tr>
  <tr>
    <td colspan="5">
      <b><%= translate_attribute(Issue, :title) %>:</b>
      <%= @issue.title %>
    </td>
  </tr>
  <tr>
    <td colspan="5">
      <b><%= translate_attribute(Issue, :description) %>:</b>
      <%= @issue.description %>
    </td>
  </tr>
  <tr>
    <td colspan="5">
      <b><%= translate_attribute(Issue, :additional_information)%>:</b>
      <%= @issue.additional_information %>
    </td>
  </tr>
</table>

<div>
  <%= link_to t('buttons.edit') , edit_issue_path(@issue)  %> |
  <%= link_to t('buttons.back') , issues_path %>
</div>

<br/>